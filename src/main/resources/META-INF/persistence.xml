<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
<!--    name 은 일반적으로 DB 이름으로 함-->
    <persistence-unit name="hello">
        <properties>
<!--            필수 속성-->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ex_jpql"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
<!--            <property name="hibernate.dialect" value="org.example.dialect.MySqlDialectCustom"/>-->

<!--            옵션-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

<!--            해당 batch_size 만큼 모아서 쿼리 한번에 날림 - JPA 성능 관련-->
            <property name="hibernate.jdbc.batch_size" value="10"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.default_batch_fetch_size" value="100"/>
        </properties>
    </persistence-unit>
</persistence>